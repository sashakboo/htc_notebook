<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
                   assembly="Notebook.NHibernate" 
  namespace="Notebook.NHibernate.Entities">
  <class name="CalendarEvent" table="CalendarEvents">
    <id name="Id" type="Int32" column="Id">
      <generator class="identity" />
    </id>
    <discriminator column="Discriminator" type="String" />
    <property name="Subject" />
    <property name="DateStart" />
    <property name="Done" />    
    <subclass name="Meeting" discriminator-value="Meeting">
      <property name="DateEnd" />
      <property name="Place" />
    </subclass>
    <subclass name="Work" discriminator-value="Work">
      <property name="DateEnd" />
    </subclass>
    <subclass name="Memo" discriminator-value="Memo" />
  </class>  
</hibernate-mapping>